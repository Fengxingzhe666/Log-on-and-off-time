<Window x:Class="Log_On_and_Off_time.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Log_On_and_Off_time"
        mc:Ignorable="d"
        Title="主窗口" Height="180" Width="320" WindowStartupLocation="CenterScreen" Closing="Window_Closing"  >
        
    <Grid>
        <ComboBox Grid.Row="1" Width="200" IsReadOnly="True" VerticalContentAlignment="Center" SelectedIndex="0">
            <ComboBoxItem Content="所有开关机时间(从早到晚)" Selected="C1"/>
            <ComboBoxItem Content="所有开关机时间(从晚到早)" Selected="C2"/>
            <ComboBoxItem Content="最近10次开关机时间(从晚到早)" Selected="C3"/>
            <ComboBoxItem Content="丁真痴情演唱" Selected="C4"/>
            <ComboBoxItem Content="退出程序" Selected="CE"/>
        </ComboBox>
        <Button Grid.Row="4" Width="100" Content="确定" Click="Button1_Click" Background="#FF00C957" FontWeight="Bold"/>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
